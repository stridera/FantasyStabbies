{
  "name": "fantasy_website",
  "version": "1.0.0",
  "private": true,
  "description": "Reddit /r/fantasy stabby voting site.",
  "scripts": {
    "start-server": "cross-env NODE_ENV=development nodemon server/server.js --watch 'server/*'",
    "start-front": "react-scripts start",
    "start": "concurrently \"yarn run start-server\" \"yarn run start-front\" --kill-others",
    "start-prod": "node server/server.js",
    "migrate": "knex --knexfile=./server/knexfile.js migrate:latest",
    "rollback": "knex --knexfile=./server/knexfile.js migrate:rollback",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "test": "npx env-cmd -f .env.test jest --config=jest-config.js"
  },
  "proxy": "http://localhost:5000",
  "author": "Matthew Strider Jones (stridera)",
  "license": "MIT",
  "dependencies": {
    "@hookform/resolvers": "^2.8.0",
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.60",
    "@reduxjs/toolkit": "^1.6.1",
    "axios": "^0.21.1",
    "camaro": "^6.1.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "http-proxy-middleware": "^2.0.1",
    "knex": "^0.95.10",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "objection": "^2.2.15",
    "objection-db-errors": "^1.1.2",
    "passport": "^0.4.1",
    "passport-reddit": "^0.2.4",
    "pg": "^8.7.1",
    "react": "^17.0.2",
    "react-date-picker": "^8.3.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.13.0",
    "react-moment": "^1.1.1",
    "react-redux": "^7.2.4",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "redux": "^4.1.1",
    "slugify": "^1.6.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "axios-mock-adapter": "^1.20.0",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.12",
    "react-scripts": "^4.0.3",
    "supertest": "^6.1.6"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devServer": {
    "compress": true,
    "public": "rfantasy.com"
  }
}
